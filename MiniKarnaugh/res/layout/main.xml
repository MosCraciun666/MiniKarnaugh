<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout2"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout678"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <Button
     android:id="@+id/facebook"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_weight="1"
     android:text="Visit Facebook page"
     />
     
<TextView
    android:id="@+id/announcementtextview"
    android:textColor="#000000"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Mini Karnaugh by Serban Stoenescu\nsherbanmobile.appspot.com"
    android:textSize="11dp"
    android:gravity="center"
    android:layout_weight="1"
    />
</LinearLayout>

<CheckBox android:id="@+id/checkbox_meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable automatic calculation on table and map(leave disabled if your device is slow)"
        android:onClick="onCheckboxClicked"/>

        
<EditText android:id="@+id/func"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="Original function"
    />


<TextView
    android:id="@+id/resultformula"
    android:textColor="#000000"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Minimized function:"
    />
    
    <RelativeLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/numberofvariables"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/numberofvariables"
        />
     </RelativeLayout>


    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
     <Button
        android:id="@+id/tablebutton"
        android:text="Show truth table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
     <Button
         android:id="@+id/allzero"
         android:text="All 0"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/tablebutton"
         />
     <Button
         android:id="@+id/allone"
         android:text="All 1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/allzero"
         />
     <Button
         android:id="@+id/help"
         android:text="Help"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/allone"
         />
    </RelativeLayout>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
        android:id="@+id/minimizeformula"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Minimize from formula"
        />
        <Button
        android:id="@+id/minimizemaptable"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Min. from map/table"
        android:layout_toRightOf="@id/minimizeformula"
        />
     </RelativeLayout>
   

<TextView
    android:id="@+id/vktextview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />

<HorizontalScrollView
        android:id="@+id/scrollview1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        >
    </HorizontalScrollView>
 
</LinearLayout>

</ScrollView>